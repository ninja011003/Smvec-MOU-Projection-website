<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="dept.css">
  <script src="dept.js"></script>
  <link rel="stylesheet" href="style.css">
  <title>Admin Sign In</title>
</head>

<body>
  <nav>
    <div class="logo"><img src="img/Smvec-crop.png" alt=""></div>
    <div class="nav-options">
      <a href="/"><button style="border: 2px solid transparent" class="btn">MoU's</button></a>
      <a href="/adminPage"><button style="border: 2px solid transparent" class="btn">Admin</button></a>
      <a href="#"><button style="margin-right:50px;">Contact Us</button></a>
    </div>
  </nav>
  <div class="logout">
    <button>LogOut</button>
  </div>
  <div class="admin">
    <div class="display">
      <table class="table">
        <thead>
          <tr>
            <td>Sl.No.</td>
            <td>MoU's</td>
            <td>Action</td>
          </tr>
        </thead>
        <tr>
          <td>1</td>
          <td>TMI</td>
          <td class="action">
            <div class="edit">
              Edit <img src="img/edit.png" alt="">
            </div>
            <div class="delete">
              Delete <img src="img/delete.png" alt="">
            </div>
          </td>
        </tr>
        
      </table>
    </div>
    <div class="add">
      <div class="form-wrapper2">
        <h2 style="margin-top: 0;">Add MoU</h2>
        <form action="/addMou" method="post" enctype="multipart/form-data" class="add-form">
          <div class="form-control2">
            <input type="text" name="companyName" required>
            <label>Company or Organisation Name</label>
          </div>
          <div class="form-control2">
            <input type="text" name="yearOfSigning" required>
            <label>Year of Signing</label>
          </div>
          <div class="form-control2">
            <input type="text" name="duration" required>
            <label>Duration</label>
          </div>
          <div style="display:flex; gap: 20px; margin-top: 30px;">
            <div>
              <input type="file" name="image" id="img" >
            <label for="img" class="upload">Upload Image</label>
            </div>
            <div>
              <input type="file" name="pdf" id="pdf" >
            <label for="pdf" class="upload">Upload MoU PDF</label>
            </div>
          </div>

          <div style="margin-top: 20px;">
            <label for="dept" style="margin-bottom: 20px;">Select the Department</label>
            <select name="dept" id="dept" multiple >
              <option value="aids">AIDS</option>
              <option value="it">IT</option>
              <option value="cse">CSE</option>
              <option value="cce">CCE</option>
              <option value="ice">ICE</option>
            </select>
          </div>

          <button type="submit" style="margin-top: 30px;">Add</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    new MultiSelectTag('dept')  // id
</script>
</body>

</html>